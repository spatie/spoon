{
    "name": "spatie/spoon",
    "description": "Our simple Laravel boilerplate.",
    "keywords": ["spatie", "framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1.0",
        "barryvdh/laravel-debugbar": "^2.4",
        "bugsnag/bugsnag-laravel": "^2.6",
        "doctrine/dbal": "^2.6",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "pda/pheanstalk": "^3.1",
        "predis/predis": "^1.1",
        "spatie/laravel-backup": "^4.18",
        "spatie/laravel-migrate-fresh": "^1.5",
        "spatie/laravel-tail": "^1.4",
        "spatie/laravel-tinker-tools": "^1.0",
        "themsaid/laravel-mail-preview": "^1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.4",
        "fzaninotto/faker": "~1.4",
        "laravel/envoy": "^1.3",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "deploy": [
            "envoy run deploy"
        ],
        "deploy-code": [
            "envoy run deploy-code"
        ],
        "fix-cs": [
            "vendor/bin/php-cs-fixer fix ."
        ],
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
